<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/list_item_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="陳哲賢"
        android:id="@+id/list_item_text"
        android:textSize="30sp"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="13dp"
        android:layout_alignBottom="@+id/list_item_thumbnail"
        android:layout_toEndOf="@+id/list_item_thumbnail" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/list_item_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="good"
        android:background="@mipmap/icon1"
        android:id="@+id/list_item_btn"
        android:layout_marginEnd="25dp"
        android:layout_alignBottom="@+id/list_item_text"
        android:layout_toStartOf="@+id/number" />
</RelativeLayout>